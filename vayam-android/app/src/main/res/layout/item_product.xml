<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/product_photo_width"
              android:layout_height="wrap_content"
              android:padding="@dimen/small_padding">
    
    <FrameLayout
        android:layout_width="@dimen/product_photo_width"
        android:layout_height="@dimen/product_photo_height">

        <ProgressBar
            android:id="@+id/item_product_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical" />

        <ImageView
            android:id="@+id/item_product_image"
            android:layout_width="@dimen/product_photo_width"
            android:layout_height="@dimen/product_photo_height"/>

    </FrameLayout>

        <TextView
            android:id="@+id/item_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="name"
            android:ellipsize="end"
            android:layout_gravity="center_horizontal|center_vertical"
            style="@style/Text.Blue.H14"/>

        <TextView
            android:id="@+id/item_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50$"
            android:layout_gravity="center_horizontal|center_vertical"
            style="@style/Text.Black.H12.Bold"/>

</LinearLayout>